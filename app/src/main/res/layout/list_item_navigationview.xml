<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:padding="8dp"
    android:id="@+id/ll_container_item_navigationview"
    >

    <ImageView
        android:id="@+id/iv_pict_item_navigationview"
        android:layout_width="@dimen/iv_pict_item_navigationview"
        android:layout_height="@dimen/iv_pict_item_navigationview"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_favourite"
        android:contentDescription=""
        />

    <com.aprido.cintabogor.widget.CustomTextView
        android:id="@+id/tv_title_item_navigationview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textColor="@color/colorBlack"
        android:text="@string/tv_title_item_navigationview"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        />

</LinearLayout>