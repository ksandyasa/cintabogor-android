<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="@dimen/anchor_point"
    android:id="@+id/rl_container_slide">

    <ImageView
        android:id="@+id/iv_pict_slide"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        android:layout_centerInParent="true"
        android:contentDescription=""
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical|left"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        tools:ignore="RtlHardcoded">

        <com.aprido.cintabogor.widget.CustomTextView
            android:id="@+id/tv_title_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceMedium"
            android:textColor="@color/colorWhite"
            android:textStyle="bold"
            android:text="@string/tv_title_slide"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="2"
            app:customFont="HelveticaLTStd-LightCond.otf"
            />

        <com.aprido.cintabogor.widget.CustomTextView
            android:id="@+id/tv_detail_slide"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:textAppearanceSmall"
            android:textColor="@color/colorWhite"
            android:text="@string/tv_detail_slide"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="4dp"
            android:shadowColor="@color/colorBlack"
            android:shadowDx="-2"
            android:shadowDy="-2"
            android:shadowRadius="2"
            app:customFont="HelveticaLTStd-LightCond.otf"
            />

    </LinearLayout>

</RelativeLayout>